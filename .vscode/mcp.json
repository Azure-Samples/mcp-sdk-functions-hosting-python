{
	"inputs": [
		{
		"type": "promptString",
		"id": "functions-key",
		"description": "Functions App Key",
		"password": true
		},
		{
		"type": "promptString",
		"id": "functions-name",
		"description": "Functions App Name",
		"password": false
		}
	],
	"servers": {
		"local-mcp-server": {
			"url": "http://0.0.0.0:7071/mcp",
			"type": "http"
		},
		"remote-mcp-server": {
            "type": "http",
            "url": "https://${input:functions-name}.azurewebsites.net/mcp",
            "headers": {
                "x-functions-key": "${input:functions-key}"
            }
        }
	}
}